<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/welcome"
    android:background="@color/young_blue">

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lewati"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/young_blue"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/ayoDiskusi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AYO DISKUSI"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/kataSambutan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the."
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_below="@id/ayoDiskusi"/>

    <ImageView
        android:id="@+id/gambarDiskusi"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/diskusi"
        android:layout_below="@id/kataSambutan"
        android:layout_margin="50dp"/>

    <Button
        android:id="@+id/btnMulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="MULAI SEKARANG"
        android:textColor="@color/young_blue"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/gambarDiskusi"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>


</RelativeLayout>